# disable splash screen
startup_message off
# big scrollback buffer
defscrollback 30000

# change the hardstatus settings to give an window list at the bottom of the screen
hardstatus alwayslastline
hardstatus string '%{= kG}%-Lw%{= kW}%50> %n%f* %t%{= kG}%+Lw%< %{= kG}%-=%{-}'
